{
  "name": "book-loader",
  "version": "0.3.3",
  "dependencies": {
    "cheerio": "^0.20.0",
    "front-matter": "^2.3.0",
    "loader-utils": "^0.2.14",
    "lodash": "^4.12.0",
    "lunr": "^0.7.0",
    "markdown-it": "^8.1.0",
    "urijs": "^1.18.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/markdown-it": "^0.0.5",
    "eslint": "^3.13.1",
    "jest": "^22.0.4",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.1",
    "typescript": "^3.0.3"
  },
  "main": "lib",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublish": "npm run build",
    "patch-release": "npm version patch && npm publish && git push --follow-tags"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testPathIgnorePatterns": [
      ".eslintrc.js"
    ],
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
